@require 'styles'

.copiedSpan
  display: none
 
.smallAddressBtn:active + .copiedSpan
  display: block
  position: absolute
  color: #4D4F4E
  font-size: 10px
  width: 88px
  height: 16px
  top: 60px
  background: #BCD18B
  line-height: 16px
  text-align: center

.homeScreen
  screen()
  padding: 16px
  background: url('../img/homa_cropped.svg')
  background-repeat: no-repeat
  background-position: 50% 4px
  background-size: 80px 80px

  .homeHeader
    width: 100%
    display: flex
    margin-bottom: 16px
    justify-content: space-between
    align-items: flex-start

  .profileInfo
    shadow(5px, 5px, #BBBBBB)
    width: 100%
    min-width: 328px
    height: 72px
    min-height: 72px
    background: url('../img/bg_small.svg')
    box-sizing: border-box
    background-size: contain
    background-repeat: no-repeat
    padding: 16px
    display: flex
    flex-direction: row

    .avatarDiv
      padding-right: 16px
    .accountDiv
      color: #ffffff
      width: 114px
      display: flex
      flex-direction: column
      .accountNameDiv
        display: flex
        flex-direction: row
        justify-content: space-between
        align-items: baseline
        padding-right: 8px
        margin-bottom: 3px
    .spacerDiv
      content: ''
      width: 2px
      height: 100%
      background: url('../img/info_spacer.svg')
      background-size: contain
    .balanceDiv
      flex-grow: 1
      padding-left: 23px
      padding-top: 4px
      .balanceText
        width: 100%
        color: #ffffff
        display: flex
      .dd-wrapper
        display: flex

