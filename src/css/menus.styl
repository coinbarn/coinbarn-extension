.menu
  box-sizing: border-box
  height: 532px
  width: 332px
  max-height: 532px
  max-width: 332px
  display:flex
  flex-direction:column
  left: 0
  right: 0
  top: 56px
  padding: 20px 32px 3px 32px
  margin: 0 auto
  background: url('../img/bg_settings.svg')
  background-repeat: no-repeat
  background-size: 332px 532px
  h1
    color: #ffffff
    margin-top: 8px
    margin-bottom: 5px
  .documents
    margin-top: 67px
    margin-bottom: 0
  ul 
    flex-grow:1
    padding:0
    list-style-type: none
    li
      list-style: none

  .settingsList
    margin-top: 0
    li
      cursor: pointer
      margin: 12px -16px 12px -16px
      padding-top: 5px
      padding-bottom: 5px
      height:38px
      &:hover
       background: #A0BE5B
      img
        margin-left: 16px
        margin-right: 16px

  a
    color: #ffffff
    text-decoration: none
  a:hover
    background: url('../img/underline_white.svg')
    background-repeat: no-repeat
    background-position: 0 17px

  .footer
    position:relative
    bottom: 0
    width: 100%
    box-sizing: border-box
    ul
      box-sizing: border-box
      display: flex
      flex-direction: row
      justify-content: space-between

  .greeting
    color: #FFFFFF
    text-align: center
    margin-bottom: 24px
  .backBtnWhite
    margin-bottom: -24px
    z-index: 2
    left: 32px
    top: 20px
